doctype html
html
  head
    title kevin &lt;3 rachel
    meta(name='viewport', content='initial-scale=1, maximum-scale=1, width=device-width, user-scalable=no')
    link(rel='stylesheet', href='/assets/css/main.css')
    script(src='/vendor/jquery/dist/jquery.min.js')
  body
    a#top.anchor

    navigation
      a.menu
        span Menu
      ul
        li
          a(href="#top")
            i.icon-home
            | Home
        li
          a(href="#accomodations")
            i.icon-hotel
            | Accomodations
        li
          a(href="#wedding-party")
            i.icon-wedding-party
            | Wedding Party
        li
          a(href="#things-to-do")
            i.icon-things-to-do
            | Things to Do
        li
          a(href="#registry")
            i.icon-registry
            | Registry

    .main
      header
        .wrapper
          .row
            .small-12.medium-9.small-center.columns
              img(src="/assets/img/logo.png")
        .row
          .small-6.columns
            h2 Date
            include:md ../data/date.md

          .small-6.columns
            h2 Location
            include:md ../data/location.md

      content

        //- SECTION: Accomodations
        a#accomodations.anchor
        section.accomodations
          //- section header
          .row
            .small-12.small-center.columns.text-center
              h2.title
                i.icon-hotel
                | Our <small>(discounted)</small> Room Block
          .row
            .small-12.medium-5.columns
              .box.space-it
                include:md ../data/accomodations-location.md
            .small-12.medium-7.columns.booking
              .box.white
                h2 To book within the block
                hr
                .row
                  .small-2.columns.text-left
                    .text-right CALL
                  .small-10.columns
                    .text-left <b>1 800 909 8375</b>
                .row
                  .small-2.columns.text-left
                    .text-right SAY
                  .small-10.columns.text-left
                    .text-left.quote
                      i "I'd like to book under the <b>Rooney-Altman</b> guest block"
              br
              .box.white
                h2 To book online
                hr
                p <a href='http://itg.sh/hotel_block' class='button'>Click this button</a>
          .row
            .small-12.medium-12.columns
              .box.space-it
                h2 Other nearby hotels
                hr
                .row
                  .small-12.medium-4.columns
                    include:md ../data/accomodations-hilton_med_center.md
                  .small-12.medium-4.columns
                    include:md ../data/accomodations-hilton_duke.md
                  .small-12.medium-4.columns
                    include:md ../data/accomodations-courtyard_duke.md
                br
                hr
                i A shuttle will be running between the Marriott Durham City Center and The Cotton Room starting at 5:30pm, continuing throughout the night.

        //- SECTION: wedding party
        a#wedding-party.anchor
        section.wedding-party
          //- section header
          .row
            .small-12.medium-10.columns.small-center.text-center
              h2.title
                i.icon-wedding-party
                | The Wedding Party

          .row
            //- Module
            .small-6.medium-5.columns
              h3 Ladies
              .row
                | {{#each weddingParty.ladies}}
                .small-12.medium-6.columns
                  .pleepon
                    img(src="{{image}}")
                    h4.title {{name}}
                    p {{role}}
                | {{/each}}

            //- Module

            .small-6.medium-5.columns.medium-right
              h3 Dudes
              .row
                | {{#each weddingParty.dudes}}
                .small-12.medium-6.columns
                  .pleepon
                    img(src="{{image}}")
                    h4.title {{name}}
                    p {{role}}
                | {{/each}}


        //- SECTION: THINGS TO DO
        a#things-to-do.anchor
        section.things-to-do
          //- section header
          .row
            .small-12.medium-10.columns.small-center.text-center
              h2.title
                i.icon-things-to-do
                | Things to do

              include:md ../data/things-to-do.md
          .row
            .small-12.medium-4.text-center.columns
              .box
                include:md ../data/things-to-do-durham.md
            .small-12.medium-4.text-center.columns
              .box
                include:md ../data/things-to-do-raleigh.md
            .small-12.medium-4.text-center.columns
              .box
                include:md ../data/things-to-do-cary.md



        //- SECTION: REGISTERY
        a#registry.anchor
        section.registry
          //- section header
          .row
            .small-12.columns.text-center
              h2.title
                i.icon-registry
                | Registry
          .row

            | {{#each registry.registrars}}
            //- Location
            .small-12.medium-6.columns.text-center
              .panel
                h3 {{{name}}}
                a.button(href="{{url}}") Check it out
            | {{/each}}




      footer
        p awesome.

